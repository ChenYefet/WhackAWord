<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhackAWordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="1278dp"
        android:layout_height="198dp"
        android:background="@drawable/sky_background"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ground_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/hole1"
            android:layout_width="208dp"
            android:layout_height="92dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="96dp"
            android:src="@drawable/hole"
            android:contentDescription="@string/hole1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hole2"
            android:layout_width="208dp"
            android:layout_height="92dp"
            android:layout_marginTop="96dp"
            android:src="@drawable/hole"
            android:contentDescription="@string/hole2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hole3"
            android:layout_width="208dp"
            android:layout_height="92dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="55dp"
            android:src="@drawable/hole"
            android:contentDescription="@string/hole3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hole4"
            android:layout_width="208dp"
            android:layout_height="92dp"
            android:layout_marginStart="316dp"
            android:layout_marginBottom="150dp"
            android:src="@drawable/hole"
            android:contentDescription="@string/hole4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/hole5"
            android:layout_width="208dp"
            android:layout_height="92dp"
            android:layout_marginEnd="316dp"
            android:layout_marginBottom="150dp"
            android:src="@drawable/hole"
            android:contentDescription="@string/hole5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>